{
	"plugins": [
		"html"
	],
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
		"browser": true,
		"jquery": true
	},
	"globals": {
		"_": false,
		"db": false,
		"log": false,
		"logger": false,
		"Ractive": false,
		"redis": false,
		"Clipboard": false,
		"ga": false,
		"component": false,
		"marked": false,
		"Pace": false,
		"Chart": false,
		"google": false,
		"app": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single",
			{ "allowTemplateLiterals": true }
		],
		"semi": [
			"error",
			"always"
		],
		"no-cond-assign": [
			"off"
		],
		"no-console": [
			"off"
		],
		"no-empty": [
			"error",
			{ "allowEmptyCatch": true }
		],
		"dot-notation": [
			"error"
		],
		"eqeqeq": [
			"error"
		],
		"array-bracket-spacing": [
			"error",
			"always",
			{ "objectsInArrays": false }
		],
		"block-spacing": [
			"error"
		],
		"brace-style": [
			"error",
			"1tbs"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"comma-spacing": [
			"error"
		],
		"comma-style": [
			"error"
		],
		"computed-property-spacing": [
			"error"
		],
		"eol-last": [
			"error"
		],
		"func-call-spacing": [
			"error"
		],
		"key-spacing": [
			"error"
		],
		"keyword-spacing": [
			"error"
		],
		"new-parens": [
			"error"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"arrow-spacing": [
			"error"
		],
		"no-var": [
			"error"
		],
		"prefer-arrow-callback": [
			"error"
		],
		"prefer-spread": [
			"error"
		],
		"rest-spread-spacing": [
			"error"
		],
		"template-curly-spacing": [
			"error"
		],
		"space-before-function-paren": [
			"error"
		]
	}
}
